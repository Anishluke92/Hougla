<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.project.name %></td>
        <td><%= link_to 'Show task', project_task_path(@project, task), class: "float-right" %></td>
        <td><%= link_to 'Show project', [@project] %></td>
        <td><%= link_to 'Edit task', edit_project_task_path(@project, task) %></td>
        <td><%= link_to 'Destroy task', [@project, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_project_task_path(@project) %>
<%= link_to 'Back', [@project] %>
