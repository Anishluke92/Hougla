<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header text-white" style="background-color: #00AA9E;">
    <strong>Project belongs_to :</strong> <i><%= @project.user.username %></i>
  </div>
<div class="card-body">
  <blockquote class="blockquote mb-0">
    <p><strong>Project name : </strong> <%= @project.name %>     </p>
     <p> <strong> Project description : </strong> <%= @project.description %></p>

    <footer class="footer">
      <strong>Edit project : </strong>  <%= link_to 'Edit', edit_project_path(@project), class:" card-link btn btn-primary text-white" %>
       <br>
      <strong>Add more tasks to project : </strong> <%= link_to ' Add Task', new_project_task_path(@project) , class:" card-link btn btn-primary text-white"%>
    </footer>
  </blockquote>
  </div>
</div>
<br>
  <table class="table table-dark table-bordered table-striped" >
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Task name: </th>
      <th scope="col">Details:</th>
    </tr>
  </thead>
   <% @project.tasks.reverse.each_with_index do |task, i| %>
  <tbody>
    <tr>
      <th scope="row"><%= i + 1 %> </th>
      <td><%= task.name %></td>
      <td>
        <%if i + 1 == 1 %>
            <%= link_to 'Show task', project_task_path(@project, task), class:" card-link btn btn-primary text-white"  %> <%= link_to 'Destroy task', [@project, task], method: :delete, data: { confirm: 'Are you sure?' },class:"card-link btn btn-danger text-white"%> <span class="badge bg-success">NEW!</span>
        <% elsif i + 1 == 2 %>
            <%= link_to 'Show task', project_task_path(@project, task), class:" card-link btn btn-primary text-white"  %> <%= link_to 'Destroy task', [@project, task], method: :delete, data: { confirm: 'Are you sure?' },class:"card-link btn btn-danger text-white"%> <span class="badge bg-primary">RECENT!</span>
        <% else %>
            <%= link_to 'Show task', project_task_path(@project, task), class:" card-link btn btn-primary text-white"  %> <%= link_to 'Destroy task', [@project, task], method: :delete, data: { confirm: 'Are you sure?' },class:"card-link btn btn-danger text-white"%>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>





